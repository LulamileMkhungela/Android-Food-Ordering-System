<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_table"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lulamile.comspace.orderapp.Order_Type">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/vegs"
        android:onClick="starter" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="200dp"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@drawable/non_veg"
        android:onClick="nveg" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/button6"
        android:background="@drawable/vegvectrr"
        android:onClick="veg" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="44dp"
        android:background="@drawable/dessert_l"
        android:onClick="dessert" />

    <TextView
        android:id="@+id/total_on_mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/imageButton"
        android:padding="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-20dp"
        android:text="starters"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#ffbc7a"
        android:onClick="fin_ord"
        android:text="Proceed" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Dessert"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="15dp"
        android:text="Meaty"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:text="Vegetables"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


</RelativeLayout>
